<script>
function calculateROI() {
  var employees = parseFloat(document.getElementById('employees').value || 500);
  var turnover = parseFloat(document.getElementById('turnover').value || 15)/100;
  var replacement = parseFloat(document.getElementById('replacement').value || 25000);
  var budget = parseFloat(document.getElementById('budget').value || 150000);

  var separations = employees * turnover;
  var reduction = 0.30; // assumed retention lift
  var savedReplacements = separations * reduction;
  var savings = savedReplacements * replacement;

  var net = savings - budget;
  var roiPct = budget > 0 ? (net / budget) * 100 : 0;
  var paybackMonths = savings > 0 ? (budget / savings) * 12 : Infinity;

  var result = `
    <strong>Estimated Annual ROI:</strong> ${Math.round(roiPct)}%<br>
    <strong>Annual Savings:</strong> $${Math.round(savings).toLocaleString()}<br>
    <strong>Payback Period:</strong> ${isFinite(paybackMonths) ? paybackMonths.toFixed(1)+' months' : 'â€”'}
  `;

  document.getElementById('result').innerHTML = result;
  document.getElementById('result').style.display = 'block';
  document.getElementById('result').scrollIntoView({behavior:"smooth"});
}
</script>
